<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- bottom shadow -->
    <item android:height="10px">
        <shape android:shape="rectangle">
            <!-- from top to bottom -->
            <gradient
                android:angle="90"
                android:endColor="@color/main_bg_bottom_shadow"
                android:startColor="@color/main_bg_bottom_shadow" />
        </shape>
    </item>

    <!-- content -->
    <item android:top="0.5dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/main_bg_bottom" />
        </shape>
    </item>
</layer-list>